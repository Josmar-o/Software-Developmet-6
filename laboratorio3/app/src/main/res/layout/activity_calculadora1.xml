<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculadora1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@color/oscuro"
            android:gravity="end|center_vertical"
            android:padding="16dp"
            android:text="0.00"
            android:textColor="@color/amarillo1"
            android:textSize="40sp" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@color/fondo">



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amarillo2"
                    android:text="A/C"
                    android:textColor="@color/azulOscuro"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amarillo2"
                    android:text="+/-"
                    android:textColor="@color/azulOscuro"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amarillo2"
                    android:text="%"
                    android:textColor="@color/azulOscuro"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amarillo2"
                    android:text="/"
                    android:textColor="@color/azulOscuro"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="7"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="8"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="9"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amarillo2"
                    android:text="X"
                    android:textColor="@color/azulOscuro"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="4"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button17"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="5"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button18"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="6"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amarillo2"
                    android:text="-"
                    android:textColor="@color/azulOscuro"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="1"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button21"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="2"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button22"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="3"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button23"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amarillo2"
                    android:text="+"
                    android:textColor="@color/azulOscuro"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="0"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button21"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="00"
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button22"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulOscuro"
                    android:text="."
                    android:textColor="@color/amarillo2"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button23"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amarillo2"
                    android:text="="
                    android:textColor="@color/azulOscuro"
                    android:textSize="25dp"
                    app:cornerRadius="0dp" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>